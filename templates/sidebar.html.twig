<div class="sidebar" data-active-color="green" data-background-color="black" data-image="{{ asset('images/sidebar-4.jpg') }}">
    <div class="logo">
        <a href="{{ path('home') }}" class="simple-text logo-mini">

        </a>
        <a href="{{ path('home') }}" class="simple-text logo-normal">
            Leaf CRM
        </a>
    </div>
    <div class="sidebar-wrapper">
        <div class="user">
            <div class="photo">
                <img src="{{ asset('profilePictures/'~app.user.photo) }}" />
            </div>
            <div class="info">
                <a data-toggle="collapse" href="#collapseExample" class="collapsed">
                            <span>
                                {{ app.user.nom }} {{ app.user.prenom }}
                                <b class="caret"></b>
                            </span>
                </a>
                <div class="clearfix"></div>
                <div class="collapse" id="collapseExample">
                    <ul class="nav">
                        <li>
                            <a href="#">
                                <span class="sidebar-mini"> MP </span>
                                <span class="sidebar-normal"> Modifier Profil </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <ul class="nav">
            {% if app.request.get('_route') == 'home' %}
            <li class="active">
        {% else %}
            <li>
                {% endif %}
                <a href="{{ path('home') }}">
                    <i class="material-icons">dashboard</i>
                    <p>Dashboard</p>
                </a>
            </li>
            {% if app.request.get('_route') == 'profile' %}
            <li class="active">
                {% else %}
            <li>
                {% endif %}
                <a href="{{ path('profile') }}">
                    <i class="material-icons">person</i>
                    <p>Mon Compte</p>
                </a>
            </li>
            {% if app.request.get('_route') == 'files' %}
            <li class="active">
                {% else %}
            <li>
                {% endif %}
                <a href="{{ path('files') }}">
                    <i class="material-icons">folder_shared</i>
                    <p>Fichiers</p>
                </a>
            </li>
            <li>
                <a href="./notifications.html">
                    <i class="material-icons text-gray">notifications</i>
                    <p>Notifications</p>
                </a>
            </li>
        </ul>
    </div>
</div>
