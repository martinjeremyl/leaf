<div class="wrapper wrapper-full-page">
    <div class="full-page register-page" filter-color="black" data-image="{{ asset('images/register.jpeg') }}">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="card card-signup">
                        <h2 class="card-title text-center">Inscription</h2>
                        <div class="row">
                            <div class="col-md-5 col-md-offset-1">
                                <div class="card-content">
                                    <div class="info info-horizontal">
                                        <div class="icon icon-rose">
                                            <i class="material-icons">folder_open</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">NAS</h4>
                                            <p class="description">
                                                Leaf permet de stocker vos fichiers et de les partager à tous les membres de votre groupe.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="info info-horizontal">
                                        <div class="icon icon-primary">
                                            <i class="material-icons">dashboard</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">Gestion des ressources</h4>
                                            <p class="description">
                                                Leaf optimise l'espace de stockage et propose un dashboard complet et intuitif
                                            </p>
                                        </div>
                                    </div>
                                    <div class="info info-horizontal">
                                        <div class="icon icon-info">
                                            <i class="material-icons">group</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">Travail collaboratif</h4>
                                            <p class="description">
                                                Leaf incorpore un système de gestion des bugs et des deadlines.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="social text-center">
                                    <button class="btn btn-just-icon btn-round btn-twitter">
                                        <i class="fa fa-twitter"></i>
                                    </button>
                                    <a  class="btn btn-just-icon btn-round btn-facebook">
                                        <i class="fa fa-facebook"> </i>
                                    </a>
                                    <button class="btn btn-just-icon btn-round btn-google">
                                        <i class="fa fa-google-plus"></i>
                                    </button>
                                </div>
                                {{ form_start(form) }}
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                    <div class="card-content">
                                        <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">face</i>
                                                </span>
                                            {{ form_row(form.username) }}
                                        </div>
                                        <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">email</i>
                                                </span>
                                            {{ form_row(form.email) }}
                                        </div>
                                        <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">lock_outline</i>
                                                </span>
                                            {{ form_row(form.password) }}
                                            {{ form_row(form._token) }}
                                        </div>
                                    </div>
                                    <div class="footer text-center">
                                        <button type="submit" class="btn btn-primary btn-round">Valider</button>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
